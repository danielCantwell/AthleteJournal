<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#ecf0f1">

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Today's Efforts"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textScaleX="1.25"
        android:textSize="30dp"
        android:textStyle="italic"
        android:textColor="#f1c40f"/>

    <TextView
        android:id="@+id/nutritionView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView21"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:text="Nutrition"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#c0392b" />

    <TableRow
        android:id="@+id/tableNameRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nutritionView"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Calories"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#888888" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Fat"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#888888" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Carbs"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#888888" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Protein"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#888888" />
    </TableRow>

    <TableRow
        android:id="@+id/tableDataRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableNameRow"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp">

        <com.cantwellcode.ipsum.Utils.SmallDecimalTextView
            android:id="@+id/n_cal_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <com.cantwellcode.ipsum.Utils.SmallDecimalTextView
            android:id="@+id/n_fat_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <com.cantwellcode.ipsum.Utils.SmallDecimalTextView
            android:id="@+id/n_carbs_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <com.cantwellcode.ipsum.Utils.SmallDecimalTextView
            android:id="@+id/n_protein_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </TableRow>

    <TableRow
        android:id="@+id/n_desired_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableDataRow"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/n_cal_desired_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2400"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#888888" />

        <TextView
            android:id="@+id/n_fat_desired_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="50"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#888888" />

        <TextView
            android:id="@+id/n_carbs_desired_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="400"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#888888" />

        <TextView
            android:id="@+id/n_protein_desired_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="100"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#888888" />
    </TableRow>

    <TextView
        android:id="@+id/workoutView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/n_desired_row"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:text="Workout"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#c0392b" />

    <TableRow
        android:id="@+id/tableWorkoutNameRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workoutView"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/textView2w"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Time"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#888888" />

        <TextView
            android:id="@+id/textView5w"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Calories"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#888888" />
    </TableRow>

    <TableRow
        android:id="@+id/tableWorkoutDataRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableWorkoutNameRow"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp">

        <com.cantwellcode.ipsum.Utils.SmallDecimalTextView
            android:id="@+id/w_time_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <com.cantwellcode.ipsum.Utils.SmallDecimalTextView
            android:id="@+id/w_distance_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableWorkoutDataRow"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/w_time_desired_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2:00:00"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#888888" />

        <TextView
            android:id="@+id/w_cal_desired_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="800"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#888888" />
    </TableRow>

</RelativeLayout>