<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#101010">

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Calorie Intake"
            android:id="@+id/textView3"
            android:layout_marginTop="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="44dp"
            android:textColor="@android:color/secondary_text_dark"/>

        <EditText
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/profileGoalCalories"
            android:layout_alignBottom="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:layout_marginLeft="60dp"
            android:gravity="center_horizontal"
            android:hint="goal #"
            android:text="2400"
            android:selectAllOnFocus="true"
            android:textColor="#FFD700"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Protein Intake"
            android:id="@+id/textView4"
            android:layout_below="@+id/textView3"
            android:layout_alignLeft="@+id/textView3"
            android:layout_marginTop="35dp"
            android:textColor="@android:color/secondary_text_dark"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/profileGoalProtein"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignLeft="@+id/profileGoalCalories"
            android:layout_alignRight="@+id/profileGoalCalories"
            android:gravity="center_horizontal"
            android:hint="goal #"
            android:text="100"
            android:selectAllOnFocus="true"
            android:textColor="#FFD700"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Carbs Intake"
            android:id="@+id/textView5"
            android:layout_below="@+id/textView4"
            android:layout_alignLeft="@+id/textView4"
            android:layout_marginTop="35dp"
            android:textColor="@android:color/secondary_text_dark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Fat Intake"
            android:id="@+id/textView6"
            android:layout_below="@+id/textView5"
            android:layout_alignLeft="@+id/textView5"
            android:layout_marginTop="35dp"
            android:textColor="@android:color/secondary_text_dark"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/profileGoalCarbs"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignLeft="@+id/profileGoalProtein"
            android:layout_alignRight="@+id/profileGoalProtein"
            android:gravity="center_horizontal"
            android:layout_alignParentEnd="false"
            android:hint="goal #"
            android:text="400"
            android:selectAllOnFocus="true"
            android:textColor="#FFD700"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/profileGoalFat"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignLeft="@+id/profileGoalCarbs"
            android:layout_alignRight="@+id/profileGoalCarbs"
            android:gravity="center_horizontal"
            android:hint="goal #"
            android:text="50"
            android:selectAllOnFocus="true"
            android:textColor="#FFD700"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Update Goals "
            android:id="@+id/profileUpdate"
            android:layout_marginTop="48dp"
            android:layout_below="@+id/textView6"
            android:layout_centerHorizontal="true"
            android:background="@android:drawable/dialog_holo_light_frame"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/profileUpdate"
            android:layout_marginTop="20dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Favorite\nMeals"
                android:id="@+id/profileFavorites"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:layout_below="@+id/profileUpdate"
                android:layout_alignRight="@+id/profileGoalFat"
                android:layout_weight="1" />
        </TableRow>

    </RelativeLayout>

</LinearLayout>