<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/n_name"
            android:hint="Name"
            android:textColorHint="@android:color/white"
            android:maxLines="1"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_weight="2"
            android:selectAllOnFocus="true"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/n_date"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:gravity="center"
            android:layout_weight="1" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row2"
        android:layout_below="@id/row1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Type"
            android:id="@+id/textView3"
            android:layout_weight="1"
            android:gravity="center" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/n_type"
            android:layout_weight="2"
            android:gravity="center"
            android:background="@android:drawable/dialog_holo_light_frame"/>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row3"
        android:layout_below="@+id/row2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Calories"
            android:id="@+id/textView4"
            android:layout_weight="1" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/n_calories"
            android:hint="# cal"
            android:textColorHint="@android:color/white"
            android:selectAllOnFocus="true"
            android:layout_weight="1"
            android:gravity="center" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row4"
        android:layout_below="@+id/row3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Protein"
            android:id="@+id/textView5"
            android:layout_weight="1" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/n_protein"
            android:hint="grams"
            android:textColorHint="@android:color/white"
            android:selectAllOnFocus="true"
            android:layout_weight="1"
            android:gravity="center" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row5"
        android:layout_below="@id/row4"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Carbs"
            android:id="@+id/textView6"
            android:layout_weight="1" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/n_carbs"
            android:hint="grams"
            android:textColorHint="@android:color/white"
            android:selectAllOnFocus="true"
            android:layout_weight="1"
            android:gravity="center" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row6"
        android:layout_below="@id/row5"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Fat"
            android:id="@+id/textView7"
            android:layout_weight="1" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/n_fat"
            android:hint="grams"
            android:textColorHint="@android:color/white"
            android:selectAllOnFocus="true"
            android:layout_weight="1"
            android:gravity="center" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row7"
        android:layout_below="@id/row6"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Fav 1"
            android:textColor="@android:color/white"
            android:id="@+id/button"
            android:layout_weight="1"
            android:singleLine="true" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Fav 2"
            android:textColor="@android:color/white"
            android:id="@+id/button2"
            android:layout_weight="1"
            android:singleLine="true" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Fav 3"
            android:textColor="@android:color/white"
            android:id="@+id/button3"
            android:layout_weight="1"
            android:singleLine="true" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row8"
        android:layout_below="@+id/row7"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="20dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Fav 4"
            android:textColor="@android:color/white"
            android:id="@+id/button4"
            android:layout_weight="1"
            android:singleLine="true" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Fav 5"
            android:textColor="@android:color/white"
            android:id="@+id/button5"
            android:layout_weight="1"
            android:singleLine="true" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Fav 6"
            android:textColor="@android:color/white"
            android:id="@+id/button6"
            android:layout_weight="1"
            android:singleLine="true" />
    </TableRow>

</RelativeLayout>