<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#101010">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/n_name"
            android:hint="Name"
            android:textColorHint="@android:color/holo_blue_light"
            android:maxLines="2"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_weight="1.5"
            android:selectAllOnFocus="true"
            android:textColor="@android:color/holo_blue_bright"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/n_date"
            android:background="@android:drawable/dialog_holo_dark_frame"
            android:textColor="#FFD700"
            android:gravity="center"
            android:layout_weight="1" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row2"
        android:layout_below="@id/row1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Type"
            android:id="@+id/textView3"
            android:layout_weight="1"
            android:textColor="@android:color/secondary_text_dark"
            android:layout_marginLeft="10dp" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/n_type"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center"/>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row3"
        android:layout_below="@+id/row2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Calories"
            android:id="@+id/textView4"
            android:layout_weight="1"
            android:textColor="@android:color/secondary_text_dark"
            android:layout_marginLeft="10dp" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/n_calories"
            android:hint="# cal"
            android:textColorHint="@android:color/holo_red_light"
            android:textColor="#FFD700"
            android:selectAllOnFocus="true"
            android:layout_weight="1"
            android:gravity="center" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row4"
        android:layout_below="@+id/row3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Protein"
            android:id="@+id/textView5"
            android:layout_weight="1"
            android:textColor="@android:color/secondary_text_dark"
            android:layout_marginLeft="10dp" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/n_protein"
            android:hint="grams"
            android:textColorHint="@android:color/holo_red_light"
            android:textColor="#FFD700"
            android:selectAllOnFocus="true"
            android:layout_weight="1"
            android:gravity="center" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row5"
        android:layout_below="@id/row4"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Carbs"
            android:id="@+id/textView6"
            android:layout_weight="1"
            android:textColor="@android:color/secondary_text_dark"
            android:layout_marginLeft="10dp" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/n_carbs"
            android:hint="grams"
            android:textColorHint="@android:color/holo_red_light"
            android:textColor="#FFD700"
            android:selectAllOnFocus="true"
            android:layout_weight="1"
            android:gravity="center" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row6"
        android:layout_below="@id/row5"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Fat"
            android:id="@+id/textView7"
            android:layout_weight="1"
            android:textColor="@android:color/secondary_text_dark"
            android:layout_marginLeft="10dp" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/n_fat"
            android:hint="grams"
            android:textColorHint="@android:color/holo_red_light"
            android:textColor="#FFD700"
            android:selectAllOnFocus="true"
            android:layout_weight="1"
            android:gravity="center" />
    </TableRow>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/n_favorites"
        android:layout_below="@+id/row6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        android:background="@android:drawable/editbox_dropdown_dark_frame"/>

</RelativeLayout>