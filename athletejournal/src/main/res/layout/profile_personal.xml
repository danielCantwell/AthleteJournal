<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ecf0f1">

    <TextView
        android:id="@+id/calorieText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Calories"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/profileGoalCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/calorieText"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/calorieText"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="goal #"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:text="2800" />

    <TextView
        android:id="@+id/fatText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/calorieText"
        android:layout_below="@+id/calorieText"
        android:layout_marginTop="10dp"
        android:text="Fat"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/profileGoalFat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fatText"
        android:layout_alignLeft="@+id/profileGoalCalories"
        android:layout_alignRight="@+id/profileGoalCalories"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="goal #"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:text="60" />

    <TextView
        android:id="@+id/carbText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fatText"
        android:layout_below="@+id/fatText"
        android:layout_marginTop="10dp"
        android:text="Carbs"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/proteinText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/carbText"
        android:layout_below="@+id/carbText"
        android:layout_marginTop="10dp"
        android:text="Protein"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/profileGoalCarbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/carbText"
        android:layout_alignLeft="@+id/profileGoalFat"
        android:layout_alignParentEnd="false"
        android:layout_alignRight="@+id/profileGoalFat"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="goal #"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:text="400" />

    <EditText
        android:id="@+id/profileGoalProtein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/proteinText"
        android:layout_alignLeft="@+id/profileGoalCarbs"
        android:layout_alignRight="@+id/profileGoalCarbs"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="goal #"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:text="140" />

    <Button
        android:id="@+id/profileFavorites"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/proteinText"
        android:layout_marginTop="20dp"
        android:text="Favorite Meals" />

    <Button
        android:id="@+id/logOut"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="38dp"
        android:text="L o g   O u t" />

    <TextView
        android:id="@+id/editEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/logOut"
        android:layout_alignLeft="@+id/proteinText"
        android:text="email: "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/logOut"
        android:layout_alignLeft="@+id/profileGoalProtein"
        android:layout_alignRight="@+id/profileGoalProtein"
        android:ems="10"
        android:gravity="center"
        android:hint="optional email"
        android:inputType="textEmailAddress" />

</RelativeLayout>
