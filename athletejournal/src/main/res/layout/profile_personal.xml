<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ecf0f1">

    <TextView
        android:id="@+id/calorieText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Calories"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/profileGoalCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/calorieText"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/calorieText"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="goal #"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:layout_marginLeft="35dp" />

    <TextView
        android:id="@+id/fatText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/calorieText"
        android:layout_below="@+id/calorieText"
        android:layout_marginTop="10dp"
        android:text="Fat"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/profileGoalFat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fatText"
        android:layout_alignLeft="@+id/profileGoalCalories"
        android:layout_alignRight="@+id/profileGoalCalories"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="goal #"
        android:inputType="number"
        android:selectAllOnFocus="true" />

    <TextView
        android:id="@+id/carbText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fatText"
        android:layout_below="@+id/fatText"
        android:layout_marginTop="10dp"
        android:text="Carbs"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/proteinText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/carbText"
        android:layout_below="@+id/carbText"
        android:layout_marginTop="10dp"
        android:text="Protein"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/profileGoalCarbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/carbText"
        android:layout_alignLeft="@+id/profileGoalFat"
        android:layout_alignParentEnd="false"
        android:layout_alignRight="@+id/profileGoalFat"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="goal #"
        android:inputType="number"
        android:selectAllOnFocus="true" />

    <EditText
        android:id="@+id/profileGoalProtein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/proteinText"
        android:layout_alignLeft="@+id/profileGoalCarbs"
        android:layout_alignRight="@+id/profileGoalCarbs"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="goal #"
        android:inputType="number"
        android:selectAllOnFocus="true" />

    <Button
        android:id="@+id/profileFavorites"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/proteinText"
        android:layout_marginTop="20dp"
        android:text="Favorite Meals" />

    <Button
        android:id="@+id/logOut"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="38dp"
        android:text="L o g   O u t" />

    <TextView
        android:id="@+id/editEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email: "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignBottom="@+id/email"
        android:layout_alignLeft="@+id/mainSportText" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:hint="how to reach you"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/mainSport"
        android:layout_alignLeft="@+id/mainSport"
        android:textSize="12sp"
        android:layout_alignRight="@+id/mainSport" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name:"
        android:id="@+id/nameText"
        android:layout_below="@+id/profileFavorites"
        android:layout_alignLeft="@+id/proteinText"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/name"
        android:layout_alignBottom="@+id/nameText"
        android:layout_alignLeft="@+id/profileGoalProtein"
        android:layout_alignRight="@+id/profileGoalProtein"
        android:hint="what's your name"
        android:gravity="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/age"
        android:layout_below="@+id/name"
        android:layout_alignLeft="@+id/name"
        android:layout_alignRight="@+id/name"
        android:hint="how old are you"
        android:gravity="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/location"
        android:layout_below="@+id/age"
        android:layout_alignLeft="@+id/age"
        android:layout_alignRight="@+id/age"
        android:hint="where are you"
        android:gravity="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/mainSport"
        android:layout_below="@+id/location"
        android:layout_alignLeft="@+id/location"
        android:layout_alignRight="@+id/location"
        android:hint="what do you do"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Age:"
        android:id="@+id/ageText"
        android:layout_above="@+id/location"
        android:layout_alignLeft="@+id/nameText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Location:"
        android:id="@+id/locationText"
        android:layout_above="@+id/mainSport"
        android:layout_alignLeft="@+id/ageText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Main Sport:"
        android:id="@+id/mainSportText"
        android:layout_alignBottom="@+id/mainSport"
        android:layout_alignLeft="@+id/locationText" />

</RelativeLayout>
