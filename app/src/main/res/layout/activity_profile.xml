<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="8dp"
    tools:context="com.cantwellcode.fitfriend.friends.ProfileActivity">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/picture"
        android:hint="name"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/name"
        android:layout_alignParentRight="true"
        android:hint="ag"
        android:textColor="@color/grey"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/sport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/age"
        android:layout_toRightOf="@+id/picture"
        android:hint="mainSport"
        android:textColor="@color/grey"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sport"
        android:layout_alignParentRight="true"
        android:hint="loc"
        android:textColor="@color/grey"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/dividerOne"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/location"
        android:layout_centerHorizontal="true"
        android:background="@color/grey" />

    <TextView
        android:id="@+id/headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dividerOne"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="THIS IS MY HEADLINE"
        android:textColor="@color/dark_grey" />

    <ImageView
        android:id="@+id/dividerTwo"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/headline"
        android:layout_centerHorizontal="true"
        android:background="@color/grey" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/dividerTwo"
        android:gravity="center"
        android:text="No More Info Yet" />

</RelativeLayout>