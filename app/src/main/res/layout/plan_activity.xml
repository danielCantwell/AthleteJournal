<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:weightSum="2">

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:selectedDateVerticalBar="@color/pomegranate"
        android:selectedWeekBackgroundColor="@android:color/background_light"
        android:showWeekNumber="false"
        android:unfocusedMonthDateColor="#DDDDDD"/>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/emptyListText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:text="Motivate your friends\nPlan a workout"
        android:gravity="center"
        android:textSize="24sp"
        android:visibility="gone"/>
</LinearLayout>